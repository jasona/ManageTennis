@{
    ViewBag.Title = "Create Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.IsOneColumn = true;
}

<h1>Create Group</h1>
<form action="/messaging/CreateGroupConfirm" method="post">
<div>
    <b>Group Name:</b><br />
    <input type="text" id="GroupName" name="GroupName" size="40" maxlength="25" /><br />
    <br />
    <b>Description:</b><br />
    <textarea id="Description" name="Description" rows="10" cols="60"></textarea><br />
    <br />
    <input type="submit" value="Create Group" class="button" />
</div>
</form>
