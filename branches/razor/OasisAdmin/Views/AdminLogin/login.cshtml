@{
    ViewBag.Title = "Oasis Beach & Tennis Club | Admin Login";
    Layout = "";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="/css/admin-blue.css" rel="stylesheet" type="text/css" media="screen" />
    <script type="text/javascript" src="/js/jquery-1.3.min.js"></script>
    <script type="text/javascript" src="/js/general.js"></script>
</head>
<body>
    <br />
    <center>
    <font color="red">@Request.QueryString["error"]</font>
    </center>
    
    <div id="login" class="borders">
        <form action="/login/validate-admin/" method="post">        
        <h3>Administration Login</h3>
        <div class="field">
            <label>
                Email Address:<br />
                <input type="text" name="emailAddress" class="textbox-small" />
            </label>
        </div>
        <div class="field">
            <label>
                Password:<br />
                <input type="password" name="password" class="textbox-small" />
            </label>
        </div>
        <div class="field">
            <input type="submit" value="Login" class="button-bold" />
        </div>
        <p><a href="http://oasistennis.com/user/recover-password/">Forgot Password</a></p>
        </form>
    </div>
</body>
</html>
