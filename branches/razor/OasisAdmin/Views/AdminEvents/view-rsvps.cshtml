@using Oasis.Lib
@model Oasis.Lib.Models.AdminEventsRSVPListModel
@{
    ViewBag.Title = "View Event RSVPs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.IsOneColumn = true;
}

<h1>RSVP List - @Model.EventName</h1>
<br />
<table class="tabledata" width="100%" border="0" cellspacing="1" cellpadding="3">
    <tr>
        <th>Name</th>
        <th>Date</th>
    </tr>
@foreach (EventRegistration er in Model.EventRegistrations)
{
    <tr>
        <td>@er.User.FirstName @er.User.LastName (@er.User.EmailAddress)</td>
        <td>@er.RegistrationDate.ToShortDateString() @er.RegistrationDate.ToShortTimeString()</td>
    </tr>
}
</table>
